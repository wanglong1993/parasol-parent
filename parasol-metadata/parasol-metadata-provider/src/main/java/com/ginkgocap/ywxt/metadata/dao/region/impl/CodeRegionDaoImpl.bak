package com.ginkgocap.ywxt.metadata.dao.region.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.PostConstruct;
import javax.annotation.Resource;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.orm.ibatis.support.SqlMapClientDaoSupport;
import org.springframework.stereotype.Repository;

import com.ginkgocap.ywxt.metadata.dao.region.CodeRegionDAO;
import com.ginkgocap.ywxt.metadata.model.CodeRegion;
import com.ibatis.sqlmap.client.SqlMapClient;

/**
 * @author douyou 地域
 * @version 创建时间：2011-11-18 下午3:54:41
 * 类说明
 */
@Repository("codeRegionDAO")
public class CodeRegionDaoImpl extends SqlMapClientDaoSupport implements CodeRegionDAO {
    @Resource
    SqlMapClient metadataSqlMapClient;

    @PostConstruct
    public void initSqlMapClient() {
        super.setSqlMapClient(metadataSqlMapClient);
    }
    public CodeRegion selectByPrimaryKey(long id) {
        return (CodeRegion) getSqlMapClientTemplate().queryForObject("tb_code_region.selectByPrimaryKey",id);
    }

    
    public List<CodeRegion> selectByParentId(long id) {
        return getSqlMapClientTemplate().queryForList("tb_code_region.selectByParentId",id);
    }

    
    public CodeRegion selectParentByPrimaryKey(long id) {
        return (CodeRegion) getSqlMapClientTemplate().queryForObject("tb_code_region.selectParentByPrimaryKey",id);
    }

    
    public List<CodeRegion> selectByName(String name) {
        Map<String, Object> map = new HashMap<String, Object>();
        map.put("name", name);
        return getSqlMapClientTemplate().queryForList("tb_code_region.selectByName",map);
    }
	@Override
	public List<CodeRegion> selectAllCountry() {
		Map<String, Object> map = new HashMap<String, Object>();
        return getSqlMapClientTemplate().queryForList("tb_code_region.selectAllCountry",map);
	}
}