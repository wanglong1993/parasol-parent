package com.ginkgocap.ywxt.metadata.service.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import com.ginkgocap.ywxt.metadata.dao.CountryCodeDao;
import com.ginkgocap.ywxt.metadata.model.CountryCode;
import com.ginkgocap.ywxt.metadata.service.CountryCodeService;
/**
 * 国家区号service实现类
 * <p>  </p>
 * @author liubang
 * @date 2015-1-15
 */
@Service("countryCodeService")
public class CountryCodeServiceImpl implements CountryCodeService {
	@Resource
	CountryCodeDao countryCodeDao;
	@Override
	public CountryCode findOne(long id) {
		return countryCodeDao.findOne(id);
	}

	@Override
	public Map<String, Object> findAll() {
		List<String> stringList = countryCodeDao.findAllType();
		List<CountryCode> list = countryCodeDao.findAll();
		Map<String,Object> map = new HashMap<String, Object>();
		map.put("listNameFirst", stringList);
		map.put("listCountry", list);
		return map;
	}

	@Override
	public CountryCode saveOrUpdate(CountryCode countryCode) {
		return countryCodeDao.saveOrUpdate(countryCode);
	}

	@Override
	public void delete(long id) {
		countryCodeDao.delete(id);
	}

}
